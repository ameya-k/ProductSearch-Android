<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".prodSim"
    android:orientation="vertical"
    android:background="#f1f0f0">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/spinnerLinearLayout">

        <Spinner
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/sortTypeSpinner"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >

        </Spinner>

        <Spinner
            android:layout_width="180dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/sortOrderSpinner">


        </Spinner>



    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No similar items"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginTop="300dp"
        android:id="@+id/nosimitemsview"/>


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/simItemsRecyclerView"
        android:layout_marginTop="20dp">



    </android.support.v7.widget.RecyclerView>



</LinearLayout>