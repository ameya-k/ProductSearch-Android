<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/simItems_singleitem_card">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/simitemscardimage"
                android:background="@android:color/darker_gray"
                android:layout_alignParentLeft="true"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:id="@+id/simprodtitleview"
                android:layout_toRightOf="@id/simitemscardimage"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/simprod_ship_days_layout"
                android:layout_toRightOf="@id/simitemscardimage"
                android:layout_below="@id/simprodtitleview">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/simprodshippingview"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/simproddaysleftview"
                    android:layout_marginLeft="40dp"/>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/simprodpriceview"

                android:layout_below="@id/simprod_ship_days_layout"
                android:layout_alignParentRight="true"/>






        </RelativeLayout>



    </android.support.v7.widget.CardView>




</LinearLayout>